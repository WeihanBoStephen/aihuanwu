<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="fill_parent"
        android:layout_height="200dip"
        android:orientation="vertical" >

        <com.zt.agw.view.widget.bannerView.ViewFlow
            android:id="@+id/viewflow"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/transparent"
            android:gravity="center"
            android:padding="3dip" >

            <com.zt.agw.view.widget.bannerView.CircleFlowIndicator
                android:id="@+id/viewflowindic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:padding="2dip"
                app:activeColor="@color/orange"
                app:activeType="fill"
                app:circleSeparation="20dip"
                app:inactiveColor="#ffffff"
                app:inactiveType="fill"
                app:radius="4dip" />
        </FrameLayout>
    </FrameLayout>
    <TextView
        android:id="@+id/product_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d20"
        android:gravity="center"
        android:text="可爱的多肉植物喜欢的来拿"
        android:textColor="@color/black"
        android:textSize="@dimen/d18"/>
    <com.zt.agw.view.widget.image.XCRoundImageView
        android:id="@+id/img_head"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/head"
        android:layout_marginTop="@dimen/d20"
        android:layout_gravity="center_horizontal" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d20"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/d18"
            android:text="奔跑的肉包子"/>
        <ImageView
            android:id="@+id/male_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/male"
            android:layout_marginLeft="3dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d20"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <Button
            android:id="@+id/send_message_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/d18"
            android:layout_marginRight="@dimen/d10"
            android:text="@string/send_message"/>
        <Button
            android:id="@+id/follow_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/d18"
            android:layout_marginLeft="@dimen/d10"
            android:text="@string/follow"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/attention_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/d10"
            android:text="@string/attention"
            android:textColor="@color/content"
            android:textSize="@dimen/d16"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/product_detail_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/d20"
        android:layout_marginLeft="@dimen/d20"
        android:layout_marginTop="@dimen/d20"
        android:textColor="@color/content"
        android:textSize="@dimen/d16"
        android:lineSpacingExtra="10px"
        android:text="很喜欢养多肉植物，家里养了一大堆没处放，送给喜欢的多肉的好朋友，可以直接来拿，也可以邮寄。"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/d10">
        <Button
            android:id="@+id/mark_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="@string/product_detail_mark"
            android:textColor="@color/content"/>
        <Button
            android:id="@+id/distance_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="@string/distance"
            android:textColor="@color/content"/>
        <Button
            android:id="@+id/get_form_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="@string/get_form"
            android:textColor="@color/content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/mark_bt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="10积分"
            android:textColor="@color/title"/>
        <Button
            android:id="@+id/distance_bt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="2.5KM"
            android:textColor="@color/title"/>
        <Button
            android:id="@+id/get_form_bt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="同城6元 异地12元"
            android:textColor="@color/title"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/d20"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/location_blue"
            android:layout_marginLeft="3dp"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/location_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textColor="@color/content"
            android:textSize="@dimen/d16"
            android:text="江苏省南京市浦口区"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/d20">
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/middle_gray"
            android:layout_marginLeft="@dimen/d20"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/d16"
            android:textColor="@color/title"
            android:text="评论"
            android:layout_marginLeft="@dimen/d10"/>
        <TextView
            android:id="@+id/comment_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/d16"
            android:textColor="@color/title"
            android:text="4"
            android:layout_marginRight="@dimen/d10"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/middle_gray"
            android:layout_marginRight="@dimen/d20"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
</LinearLayout>
