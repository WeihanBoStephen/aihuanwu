<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">
    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/orange">

        <LinearLayout
            android:id="@+id/search_ln"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/d10"
            android:layout_marginRight="@dimen/d10"
            android:layout_marginTop="9dp"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="9dp"
            android:layout_toLeftOf="@+id/cancel_bt"
            android:orientation="horizontal"
            android:background="@drawable/rounded_search">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/search_bk"/>
            <EditText
                android:id="@+id/search_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:hint="@string/search_edit"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:textSize="@dimen/d16"
                android:layout_marginLeft="@dimen/d10"/>

        </LinearLayout>
        <TextView
            android:id="@+id/cancel_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="@dimen/d16"
            android:layout_marginRight="@dimen/d10"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/result_ln"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            android:layout_alignParentStart="true">
            <ListView
                android:id="@+id/search_result_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@color/white"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/history_scroll"
            android:background="@color/white"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">
            <LinearLayout
                android:id="@+id/history_ln"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/middle_gray"></View>

                    <com.zt.agw.view.search.MyListView
                        android:id="@+id/listView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></com.zt.agw.view.search.MyListView>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/middle_gray"/>

                <TextView
                    android:id="@+id/clear_history_bt"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/d10"
                    android:background="@drawable/rounded_white_button"
                    android:textColor="@color/title"
                    android:textSize="@dimen/d16"
                    android:layout_marginBottom="10dp"
                    android:text="@string/clear_history"/>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>
