<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <Button
        android:id="@+id/add_comment_bt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="@dimen/d10"
        android:layout_marginBottom="@dimen/d10"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="@dimen/d10"
        android:text="@string/add_comment"
        android:textSize="@dimen/d16"
        android:background="@drawable/rounded_add_comment_bt"/>
    <RelativeLayout
        android:id="@+id/comment_item_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <com.zt.agw.view.widget.image.XCRoundImageView
            android:id="@+id/head_iv"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/head"
            android:layout_marginLeft="@dimen/d10"
            android:layout_marginTop="@dimen/d10"
            android:layout_marginBottom="@dimen/d10"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/head_iv"
            android:layout_marginTop="@dimen/d10"
            android:layout_marginLeft="@dimen/d10">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="苗小姐"
                    android:textSize="16dp"
                    android:textColor="@color/title"
                    android:layout_marginTop="5dp"/>
                <ImageView
                    android:id="@+id/male_iv"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="3dp"
                    android:src="@drawable/female"/>
            </LinearLayout>
            <TextView
                android:id="@+id/comment_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="是啊，很喜欢！送给你"
                android:textSize="16dp"
                android:textColor="@color/content"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/d10"
            android:layout_marginTop="@dimen/d10">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/time"/>
            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="2"
                android:textSize="16dp"
                android:textColor="@color/content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="小时前"
                android:textSize="16dp"
                android:textColor="@color/content"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
