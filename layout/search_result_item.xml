<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="0dp"
    android:layout_marginTop="3dp"
    android:layout_marginLeft="@dimen/d5"
    android:layout_marginRight="@dimen/d5"
    android:layout_marginBottom="3dp"
    android:background="@color/background">
    <LinearLayout
        android:id="@+id/item1_ln"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="0dp"
        android:paddingRight="3dp"
        android:background="@color/background">
        <com.zt.agw.view.widget.image.XCRoundRectImageView
            android:id="@+id/item1_iv1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/head"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp"
            android:background="@drawable/rounded_white_button">
            <TextView
                android:id="@+id/item1_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/d22"
                android:padding="@dimen/d5"
                android:text=""/>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:background="@color/white"
                android:layout_marginBottom="@dimen/d5">
                <ImageView
                    android:id="@+id/item1_iv2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginBottom="@dimen/d5"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="@dimen/d5"
                    android:src="@drawable/gold"/>
                <TextView
                    android:id="@+id/item1_gold_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/item1_iv2"
                    android:text=""
                    android:textSize="@dimen/d16"
                    android:layout_marginLeft="@dimen/d5"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/orange"/>
                <TextView
                    android:id="@+id/item1_km_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/d5"
                    android:text="km"
                    android:textSize="@dimen/d14"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/pin_text_color"/>
                <TextView
                    android:id="@+id/item1_pin_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/item1_km_tv"
                    android:text=""
                    android:textSize="@dimen/d14"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/pin_text_color"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pin"
                    android:layout_marginTop="@dimen/d10"
                    android:layout_marginRight="@dimen/d5"
                    android:layout_toLeftOf="@+id/item1_pin_tv"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/item2_ln"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="3dp"
        android:paddingTop="5dp"
        android:paddingBottom="0dp"
        android:paddingRight="5dp"
        android:background="@color/background">
        <com.zt.agw.view.widget.image.XCRoundRectImageView
            android:id="@+id/item2_iv1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/head"/>
        <LinearLayout
            android:id="@+id/item2_title_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp"
            android:background="@drawable/rounded_white_button">
            <TextView
                android:id="@+id/item2_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/d22"
                android:padding="@dimen/d5"
                android:text=""/>
            <RelativeLayout
                android:id="@+id/relative02"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="@dimen/d5">
                <ImageView
                    android:id="@+id/item2_iv2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginBottom="@dimen/d5"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="@dimen/d5"
                    android:src="@drawable/gold"/>
                <TextView
                    android:id="@+id/item2_gold_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/item2_iv2"
                    android:text=""
                    android:textSize="@dimen/d16"
                    android:layout_marginLeft="@dimen/d5"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/orange"/>
                <TextView
                    android:id="@+id/item2_km_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/d5"
                    android:text="km"
                    android:textSize="@dimen/d14"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/pin_text_color"/>
                <TextView
                    android:id="@+id/item2_pin_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/item2_km_tv"
                    android:text=""
                    android:textSize="@dimen/d14"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/pin_text_color"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pin"
                    android:layout_marginTop="@dimen/d10"
                    android:layout_marginRight="@dimen/d5"
                    android:layout_toLeftOf="@+id/item2_pin_tv"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
